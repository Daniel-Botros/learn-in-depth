#ifndef FIFO_H_
#define FIFO_H_

#include "stdio.h"
#include "stdint.h"
/*-----user config-----*/

#define element_type uint8_t	//element type (uint8_t, uint26_t, uint32_t, ....)
#define width 5					//the width of the buffer

/*-----end user config-----*/

element_type buffer[width];

//FIFO data types

typedef struct {
	unsigned int length;
	unsigned int count;
	element_type* base;
	element_type* head;
	element_type* tail;
}FIFO_Buf_t;

//error status type
typedef enum {
	LIFO_no_error,
	LIFO_full,
	LIFO_empty,
	LIFO_Null,
};


#endif /* FIFO_H_ */
